/* pages/register/register.wxss */

page {
  height: 100%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
  background-color: #f2f2f2;
}

/*登录图片*/

.login-icon {
  flex: none;
}

.login-img {
  width: 750rpx;
}

/*表单内容*/

.login-from {
  margin-top: 40rpx;
  flex: auto;
  height: 100%;
}

.inputView {
  background-color: #fff;
  line-height: 88rpx;
}

/*输入框*/

.nameImage, .keyImage {
  margin-left: 44rpx;
  width: 28rpx;
  height: 28rpx;
}

.loginLab {
  margin: 30rpx 30rpx 30rpx 30rpx;
  color: #545454;
  font-size: 28rpx;
}

.inputText {
  flex: block;
  float: right;
  text-align: right;
  margin-right: 44rpx;
  margin-top: 22rpx;
  color: #ccc;
  font-size: 28rpx;
}

.line {
  width: 100%;
  height: 1rpx;
  background-color: #ccc;
  margin-top: 1rpx;
}

/*按钮*/

.loginBtnView {
  width: 100%;
  height: auto;
  background-color: #f2f2f2;
  margin-top: 0px;
  margin-bottom: 0px;
  padding-bottom: 0px;
}

.loginBtn {
  width: 80%;
  margin-top: 35px;
}

/* 授权按钮 */

.btn {
  width: 80%;
  margin-top: 35px;
  background-color: #fc8901;
  color: white;
  font-size: 34rpx;
}
