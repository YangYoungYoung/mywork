/* pages/center/center.wxss */
page{
   background: #eee; 
}
.centerContainer {
  background: #F9F9F9;
  overflow: hidden;
  box-sizing: border-box;
}
.logo {
  display: block;
  margin: 40px auto;
  width: 92px;
  height: 82px;
}
.smallsize{
  font-size: 12px;
  color: #8a8a8a;
}
.icon-wrap {
  width: 25%;
  height: 80%;
  float: left;
  text-align: center;
}


.page__ft{
    position: absolute; bottom: 30rpx; width: 100%; text-align: center;
}

.server{ position: absolute; top: 30rpx; right: 40rpx; }
.zan-panel {
  background: #fff;
  border-top: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5;
  margin-top: 10px;
  overflow: hidden;
}

.zan-panel-title {
  font-size: 14px;
  line-height: 1;
  color: #999;
  padding: 20px 15px 0 15px;
}


.zan-panel--without-margin-top {
  margin-top: 0;
}
.userinfo-avatar {
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  margin-bottom: 2rpx;
  border-radius: 50%;
  border: 10rpx solid #FFD700;
}

.g-bda-userinfo {
  padding-top: 38rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-nickname{
  color: #292929;
  font-size: 15px;
}
.zan-cell {
  position: relative;
  padding: 12px 15px;
  display: flex;
  align-items: center;
  line-height: 1.4;
  font-size: 14px;
}

.zan-cell::after {
  position: absolute;
  left: 15px;
  right: 0;
  bottom: 0;
  border-top: 1rpx solid #e5e5e5;
  background: #e5e5e5;
  content: ' ';
}
.zan-cell__bd {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.zan-cell__ft {
  position: relative;
  text-align: right;
  color: #666;
}
.image{
  width: 70rpx;
  height: 70rpx;
}
.zan-cell--last-child::after,
.zan-cell:last-child::after {
  display: none;
}

.zan-cell--access .zan-cell__ft {
  padding-right: 13px;
}

.zan-cell--access .zan-cell__ft::after {
  position: absolute;
  top: 50%;
  right: 2px;
  content: " ";
  display: inline-block;
  height: 6px;
  width: 6px;
  border-width: 2px 2px 0 0;
  border-color: #c8c8c8;
  border-style: solid;
  transform: translateY(-50%) matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
}
.zan-cell--switch {
  padding-top: 6px;
  padding-bottom: 6px;
}
.zan-pull-left {
  float: left;
}

.zan-pull-right {
  float: right;
}
.zan-pull-right-mine{
  float: right;
  margin-top: 10px;
  margin-right: 14px;
}
.deg button{border:none;height:90rpx;background:none;border-radius:0;line-height:90rpx;color:#333;font-size:14px;text-align:left;}
	.deg button:after{border:none;}