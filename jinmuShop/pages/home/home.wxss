/* pages/home/home.wxss */

.page {
  width: 100%;
  height: 100%;
}

.slide-image{
  width: 100%;
}

#types {
  width: 100%;
  height: 190rpx;
  font-size: 16px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 0rpx;
}

.list-item {
  background-color: white;
  width: 100%;
  height: 180rpx;
  padding-top: 25rpx;
  text-align: center;
  align-items: center;
  display: block;
}

.list-item::after {
  border: 0;
}

.item-foot {
  font-size: 28rpx;
  padding: 0;
  width: 100%;
  margin-top: -40rpx;
}

.item-head {
  width: 100%;
  height: auto;
}

.item-head image {
  width: 100rpx;
  height: 100rpx;
}

.interval {
  width: 100%;
  height: 10rpx;
  background-color: #eee;
}

.cell {
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 20rpx;
}

.left {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
}

.cell_left {
  width: 400rpx;
  height: 180rpx;
  border: 1rpx solid #818080;
  margin-left: 30rpx;
  text-align: center;
  align-items: center;
  border-radius: 15rpx;
}

.cell_info {
  width: 100%;
  align-items: center;
  border-radius: 15rpx;
}

.cell_info {
  width: 100%;
  height: 100%;
  display: block;
  margin-left: 20rpx;
  font-size: 34rpx;
}

.info_name {
  margin-top: 20rpx;
  font-weight: bold;
}

.info_price {
  margin-top: 30rpx;
  color: red;
}

.cell_left image {
  margin-top: 20rpx;
}

.cell_right {
  width: 100%;
  height: 100%;
  display: block;
}

.buy_btn {
  width: 120rpx;
  height: 50rpx;
  font-size: 28rpx;
  background-color: white;
  border: 4rpx solid #649ed5;
  color: #649ed5;
  line-height: 50rpx;
  border-radius: 10rpx;
  margin-top: 40rpx;
  text-align: center;
  margin-right: 40rpx;
}

.content_title {
  width: 100%;
  text-align: center;
  font-size: 30rpx;
  margin-top: 20rpx;
}

.content{
  width: 100%;
}